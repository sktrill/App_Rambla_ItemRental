@model otr_project.Models.ChangePasswordModel

@{
    ViewBag.Title = "Rambla | Change Password";
}

<div class = "container_12">
    <div class="header_to_body_gap"></div>
    <!----- Account Dashboard ----->
    <div class="grid_12" id = "my_account_dashboard">
        <ul class="user_nav_links">
            <li class="user_navbar">@Html.ActionLink("Agreements", "Agreements", "User")</li>
            <li class="user_navbar">@Html.ActionLink("Borrowed", "ItemsBorrowed", "User")</li>
            <li class="user_navbar">@Html.ActionLink("Listings", "Items", "User")</li>
            <li class="user_navbar">@Html.ActionLink("Inbox", "MessageBox", "User")</li>
            <li class="user_navbar">@Html.ActionLink("Profile", "Index", "User")</li>
        </ul>
    </div>
    <div class="clear">
    &nbsp;</div>

    <div class="grid_12">
        <div>
            <div id="Change_Password_Title" class="title_container">
                <h1>
                    Change Password
                </h1>
                <h2 id="Change_Password_Subtitle" class="page_subtitle">
                    Passwords should be a minimum of @ViewBag.PasswordLength characters.
                </h2>
            </div>
            <div id="user-edit-container" class="container">
                <table>
                    <tr>
                        <td>
                            @using (Html.BeginForm()) {
                            @Html.ValidationSummary(true)
                            <div>
                                    <div class="form_field">
                                        @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Old Password", type = "password" })
                                        @Html.ValidationMessageFor(m => m.OldPassword)
                                    </div>
                                    <div class="form_field">
                                        @Html.PasswordFor(m => m.NewPassword, new { placeholder = "New Password", type = "password" })
                                        @Html.ValidationMessageFor(m => m.NewPassword)
                                    </div>
                                    <div class="form_field">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm New Password", type = "password" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    </div>
                                    <div class="btn_listit_page">
                                        <input type="submit" value="Change Password" />
                                    </div>
                            </div>
                        }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>