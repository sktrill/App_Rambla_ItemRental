@model otr_project.ViewModels.ProcessSecurityCodeViewModel

@{
    ViewBag.Title = "Rambla | Rental Confirmed";
}

<div class="container_12">
    <div class="header_to_body_gap"></div>
    <div class="grid_12">
        <div>
            <div id="Rental_Confirmed_Title" class="title_container">
                <h1>
                    Rental Confirmed
                </h1>
                <h2 id="Rental_Confirmed_Subtitle" class="page_subtitle">
                    Your rental order is now confirmed.
                </h2>
            </div>
        </div>
        <div id="security_code_correct_container" class="container">
            <div id="security_code_correct_subcontainer" class="subcontainer">
                @if (Model.IsOwner == true)
                {
                    <p>Your item "@Model.OrderDetail.Item.Name", has been successfully rented by @Model.Order.User.FirstName @Model.Order.User.LastName!</p><br />
                    <p>You can expect the item back on: @Model.OrderDetail.DrofoffDate.Date.ToLongDateString()</p>
                }
                else if (Model.IsOwner == false)
                {
                     <p>You have succesfully rented the item "@Model.OrderDetail.Item.Name", from @Model.OrderDetail.Item.Owner.FirstName @Model.OrderDetail.Item.Owner.LastName!</p><br />
                     <p>Please return the item on: @Model.OrderDetail.DrofoffDate.Date.ToLongDateString()</p>
                }
            </div>
        </div>
    </div>
</div>